FROM chipster-web-server

COPY tools /opt/chipster-web-server/tools
COPY manual /opt/chipster-web/src/assets/manual

RUN mkdir -p /opt/chipster \
  && cd /opt/chipster \
  && ln -s /mnt/tools tools \
  && chown -R 1000 /opt/chipster-web-server/tools \
  && chmod -R ugo+rwx /opt/chipster-web-server/tools

CMD ["java", "-cp", "lib/*:", "fi.csc.chipster.toolbox.ToolboxService"]
